/* The switchPro - the box around the sliderPro */
.switchPro {
  font-size: 17px;
  position: relative;
  display: inline-block;
  width: 200px;
  height: 2em;
}


/* The sliderPro */
.sliderPro {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: linear-gradient(to right, #5a0dff -5%, #ff29b8 31%, #ff581c, #ff29b8, #5a0dff);
  color: #FFF;
  font-weight: 600;
  border-radius: 30px;
  border: solid 1px #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  transition: .4s;

  background-size: 200% 100%;
  animation: gradientAnimation 4s linear infinite;


/* Definición de la animación con keyframes */
@keyframes gradientAnimation {
  0% {
    background-position: 0% 0;
  }
  50% {
    background-position: 100% 0;
  }
  100% {
    background-position: 0% 0;
  }
}
}


.sliderPro:before {
  position: absolute;
  content: "LOGO";
  height: 90%;
