<script>
    // Codigo Boton Subir Archivo
    document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById('product-form-template--16477474848828__main');
        console.log('Formulario encontrado:', form);

        if (form) {
            form.removeAttribute("novalidate");
            console.log('Atributo "novalidate" eliminado del formulario.');
        }

        const fileInput = document.getElementById('fileInput');
        console.log('Input de archivo encontrado:', fileInput);

 // Remover el atributo 'required'
        fileInput.removeAttribute('required');
        console.log("Atributo 'required' removido del input de archivo.");

        const toggleswitchPro = document.getElementById('toggleSwitchPro');
        const nombreField = document.getElementById('nombre');
        const logoField = document.getElementById('logo-field');
        const notaField = document.getElementById('nota-field');

        const botonSubir = document.getElementById('BotonSubir');
        console.log('Botón de subir encontrado:', botonSubir);

        const previewContainer = document.getElementById('previewContainer');
        console.log('Contenedor de previsualización encontrado:', previewContainer);

        const filePreview = document.getElementById('filePreview');
        console.log('Previsualización de archivo encontrada:', filePreview);

        const removeButton = document.getElementById('removeButton');
        console.log('Botón de remover archivo encontrado:', removeButton);

        const overlay = document.getElementById('overlay');
        console.log('Overlay encontrado:', overlay);

        const closeOverlay = document.getElementById('closeOverlay');
        console.log('Botón de cerrar overlay encontrado:', closeOverlay);

        const overlayMessage = document.getElementById('overlayMessage');
        console.log('Mensaje de overlay encontrado:', overlayMessage);

        const addToCartButtons = document.querySelectorAll(".product-form__submit");
        console.log('Botones de añadir al carrito encontrados:', addToCartButtons);

         // Función para actualizar la visibilidad de los campos según el toggle switch
         function updateFields() {
            if (toggleSwitch.checked) {
                // Mostrar LOGO y ocultar NOMBRE
                logoField.classList.remove('hidden');
                nombreField.classList.add('hidden');
                notaField.classList.add('hidden');
                fileInput.name = 'properties[LOGO]';
                fileInput.required = false;
            } else {
                // Mostrar NOMBRE y ocultar LOGO
                logoField.classList.add('hidden');
                nombreField.classList.remove('hidden');
                notaField.classList.remove('hidden');
                fileInput.name = '';
                fileInput.required = false;
            }
        }

        // Inicializar campos según el estado del toggle switch
        updateFields();

        // Agregar evento al toggle switchPro para actualizar campos
        toggleSwitch.addEventListener('change', updateFields);

        // Código Botón Subir Archivo
        botonSubir.addEventListener('click', () => {
            if (toggleSwitch.checked) {
                fileInput.click();
            }
        });

        fileInput.addEventListener('change', (event) => {
            const file = event.target.files[0];
            console.log('Archivo seleccionado:', file);

            if (file && file.type === 'image/png') {
                const reader = new FileReader();
                reader.onload = function(e) {
                    filePreview.src = e.target.result;
                    previewContainer.style.display = 'block';
                    botonSubir.innerHTML = 'CAMBIAR ARCHIVO <img src="https://cdn.shopify.com/s/files/1/0622/2161/5164/files/RefreshIcon.svg?v=1720358522" alt="RefreshIcon" style="filter: invert(1); width: 30px; height: 30px; vertical-align: middle; margin-left: 5px;">';
                     // Mostrar el campo textarea si es un archivo PNG
        // const notaField = document.getElementById('nota-field');
        if (notaField) {
            notaField.classList.remove('hidden'); // Mostrar el campo
        }
                }
                reader.readAsDataURL(file);
                console.log('Archivo PNG cargado y previsualizado.');

            } else {
                fileInput.value = "";
            overlayMessage.innerHTML = "Formato no permitido <br> por favor suba su logo en formato .PNG";
            overlay.style.display = 'flex';
            document.body.style.overflow = 'hidden';
                console.error('Archivo seleccionado no es PNG.');
            }
        });

        removeButton.addEventListener('click', () => {
            fileInput.value = "";
            filePreview.src = "";
            previewContainer.style.display = 'none';
            botonSubir.innerHTML = 'SUBIR ARCHIVO <img src="https://cdn.shopify.com/s/files/1/0622/2161/5164/files/FolderUpIcon.svg?v=1720358303" alt="FolderUpIcon" style="filter: invert(1); width: 30px; height: 30px; vertical-align: middle; margin-left: 5px;">';
            console.log('Archivo removido y previsualización ocultada.');
            // Ocultar el campo textarea si es un archivo PNG
        // const notaField = document.getElementById('nota-field');
        if (notaField) {
            notaField.classList.add('hidden'); // Mostrar el campo
        }
        });

          // Validación al agregar al carrito
         
        addToCartButtons.forEach(button => {
            button.addEventListener('click', (event) => {
                if (!fileInput.files.length && toggleSwitch.checked) {
                    event.preventDefault();
                    overlayMessage.textContent = "Ups! Has olvidado cargar tu archivo.";
                    overlay.style.display = 'flex';
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        closeOverlay.addEventListener('click', () => {
            overlay.style.display = 'none';
            document.body.style.overflow = 'auto';
            console.log('Overlay cerrado.');
        });
    });

</script>
