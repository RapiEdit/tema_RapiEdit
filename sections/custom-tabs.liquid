{% stylesheet %}
  ul.custom--tabs {
    list-style-type: none;
    width: 100%; /* Ajustado para que se adapte al 100% del contenedor */
    max-width: 1200px; /* Limita el ancho máximo */
    display: flex !important;
    flex-wrap: wrap !important;
    border-radius: 50px; /* Ajustado para un borde más suave */
    background: #333; /* Fondo oscuro */
    padding: 10px; /* Reducido el padding para ajustarse mejor */
    justify-content: center; /* Centrar elementos */
    margin: 20px auto; /* Centrar el ul en la página */
}

.custom--tabs .tab__list {
    margin: 0 10px; /* Espacio entre pestañas */
}

.custom__tab-content {
    display: none;
    color: #fff; /* Texto blanco para el contenido */
}

.custom__tab-content.active {
    display: block;
}

.tab__list .custom-tab {
    display: inline-block !important;
    cursor: pointer !important;
    margin: 0 !important;
    padding: 15px 20px;
    border: 1px solid #555; /* Borde más oscuro */
    color: #999; /* Color de texto más claro */
    border-radius: 30px; /* Ajustado para un borde más suave */
    font-size: 16px;
    font-weight: 500;
    transition: border-color 0.3s ease, transform 0.3s ease, color 0.3s ease;
    background: transparent; /* Fondo transparente */
}

.tab__list .custom-tab:hover {
    border: 1px solid #fff; /* Borde blanco al pasar el cursor */
    color: #fff; /* Texto blanco al pasar el cursor */
    transform: scale(1.05) !important;
}

.tab__list .custom-tab.active {
    color: #fff; /* Texto blanco para la pestaña activa */
    border: 1px solid #ff29b8; /* Borde de gradiente para la pestaña activa */
    border-radius: 30px;
    background: linear-gradient(122deg, #4f4f4f -65.81%, #282323 117.04%); /* Fondo de gradiente */
}

@media only screen and (max-width: 576px) {
    ul.custom--tabs {
        flex-direction: column !important;
    }

    .custom--tabs .tab__list .custom-tab {
        margin: 10px 0 !important;
        width: 100%;
        padding: 10px 15px !important;
    }

    .custom__tab-content.active {
        padding: 0 15px;
    }
}

  {% endstylesheet %}
  
  <ul class="custom--tabs page-width">
    {% for block in section.blocks %}
      {% if block.type == 'tab' %}
        <li class="tab__list {% if forloop.first %}active{% endif %}">
          <button
            class="custom-tab {% if forloop.first %}active{% endif %}"
            data-content-id="content--{{ block.id }}--{{ section.id }}"
          >
            {{ block.settings.heading }}
          </button>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
  
  {% for block in section.blocks %}
    {% if block.type == 'tab' %}
      <div
        id="content--{{ block.id }}--{{ section.id }}"
        class="custom__tab-content page-width {% if forloop.first %}active{% endif %}"
      >
        {{ block.settings.tab_content }}
      </div>
    {% endif %}
  {% endfor %}
  
  {% javascript %}
  document.querySelectorAll('.custom-tab').forEach(function(tab) {
    tab.addEventListener('click', function() {
      var contentId = this.dataset.contentId;
      var content = document.getElementById(contentId);
  
      document.querySelectorAll('.custom__tab-content').forEach(function(tabContent) {
        tabContent.classList.remove('active');
      });
  
      document.querySelectorAll('.custom-tab').forEach(function(tab) {
        tab.classList.remove('active');
      });
  
      this.classList.add('active');
      content.classList.add('active');
    });
  });
  {% endjavascript %}
  
  {% schema %}
  {
    "name": "Tabs",
    "blocks": [
      {
        "type": "tab",
        "name": "Tabs",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "info": "Include a heading that explains the tab."
          },
          {
            "type": "richtext",
            "id": "tab_content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Tabs",
        "blocks": [
          {
            "type": "tab"
          }
        ]
      }
    ]
  }
  {% endschema %}
  
  